@using eshop.Areas.Admin.Controllers;
@model Carousel

@{ if (String.IsNullOrWhiteSpace(ViewBag.Action) == false)          // will look for action (create or edit)
    {
        <div class="row">
            <form asp-action="@ViewBag.Action" enctype="multipart/form-data" method="post">
                <!-- enctype allow us to choose img from files-->
                <div class="form-group col-sm-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @{ if (ViewBag.Action == nameof(CarouselController.Edit))
                        {
                            <input type="hidden" asp -for="@Model.ID" class="form-control">
                        }
                    }
                    <div class="form-group">
                        <label asp-for="@Model.DataTarget"></label>
                        <input asp-for="@Model.DataTarget" class="form-control" placeholder="Enter DataTarget">
                        <span asp-validation-for="@Model.DataTarget" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Image"></label>                  <!-- will show open file for load img-->
                        <input id="fileupload" asp-for="@Model.Image" accept="image/*" class="form-inline">       <!--accept is filter -->
                        <span asp-validation-for="@Model.Image" class="text-danger"></span>
                        <input type="hidden" value="/" asp-for="@Model.ImageSrc" class="form-control" />        <!--jen na oko, aby proslo validaci-->
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ImageAlt"></label>
                        <input asp-for="@Model.ImageAlt" class="form-control" placeholder="Enter ImageAlt"> 
                        <span asp-validation-for="@Model.ImageAlt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CarouselContent"></label>
                        <textarea asp-for="@Model.CarouselContent" class="form-control" rows="20" cols="30" placeholder="Enter CarouselContent"> </textarea>
                        <span asp-validation-for="@Model.CarouselContent" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    }
    else
    {
        <h2> ViewBag is empty </h2>
    }
}

