@model Carousel
@{
    ViewData["Title"] = "Carousel Create";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<p>Create new carousel.</p>
<br />

@{ViewBag.Action = "Create"; }      <!-- jedina odlisnost formulare - musime takto doplnit -->

@await Html.PartialAsync("EditForm", Model)    <!-- 2nd option -->  <!-- formular je stejny pro Create i Edit - vytvorili jsme spolecny formular (EditForm) a tady se jen odkazeme-->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <environment include="Development">
    <script src="~/js/Validation/FileContentTypeValidation.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/js/Validation/FileContentTypeValidation.min.js"></script>
    </environment>
}
