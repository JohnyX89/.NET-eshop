@using eshop.Areas.Admin.Controllers;
@model Product

@{
    ViewData["Title"] = "Product edit";
}

<h2>Edit product: @Model.Name</h2>

<br />

<div class="row">
    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        <div class="form-group col-sm-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="@Model.ID">
            <input type="hidden" asp-for="@Model.Name">

            <div class="form-group">
                <label asp-for="@Model.Content"></label>
                <input asp-for="@Model.Content" class="form-control" placeholder="Enter Content">
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Image"></label>                   
                <input id="fileupload" asp-for="@Model.Image" accept="image/*" class="form-inline">       
                <span asp-validation-for="@Model.Image" class="text-danger"></span>
                <input type="hidden" value="/" asp-for="@Model.ImageSrc" class="form-control" />       
            </div>

            <div class="form-group">
                <label asp-for="@Model.Price"></label>
                <input asp-for="@Model.Price" class="form-control" placeholder="Enter Price">
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Available"></label>
                <input asp-for="@Model.Available" class="form-control" type="checkbox" placeholder="Enter Available">
                <span asp-validation-for="@Model.Available" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <environment include="Development">
        <script src="~/js/Validation/FileContentTypeValidation.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/js/Validation/FileContentTypeValidation.min.js"></script>
    </environment>
}