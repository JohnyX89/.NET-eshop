@model eshop.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@section Styles
{
    <environment include="Development">
        <link rel="stylesheet" href="~/css/login.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/login.css">
    </environment>
}

<h1>Register</h1>
<hr />

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.css" rel="stylesheet">

<div class="container">

    <script id="metamorph-1-start" type="text/x-placeholder">
    </script>
    <script id="metamorph-21-start" type="text/x-placeholder">
    </script>

    <div class="container text-center">
        <form asp-action="Register" class="form-signin" data-ember-action="2">
            <h2 class="form-signin-heading">Register</h2>

            <br><br>

            <div class="form-group">
                <input asp-for="UserName" class="ember-view ember-text-field form-control login-input form-control" placeholder="UserName" type="text">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="FirstName" class="ember-view ember-text-field form-control login-input form-control" placeholder="FirstName" type="text">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="LastName" class="ember-view ember-text-field form-control login-input form-control" placeholder="LastName" type="text">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Email" class="ember-view ember-text-field form-control login-input form-control" placeholder="Email" type="text">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="PhoneNumber" class="ember-view ember-text-field form-control login-input form-control" placeholder="PhoneNumber" type="text">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" class="ember-view ember-text-field form-control login-input form-control" placeholder="Password" type="text">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="RepeatedPassword" class="ember-view ember-text-field form-control login-input form-control" placeholder="RepeatedPassword" type="text">
                <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
            </div>


            <script id="metamorph-22-start" type="text/x-placeholder">
            </script>
            <script id="metamorph-22-end" type="text/x-placeholder">
            </script>

            <button class="btn btn-lg btn-primary btn-block btn-center" type="submit" data-bindattr-3="3">Register me</button>
            <br>
        </form>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Validation/FileContentTypeValidation.js"></script>
}